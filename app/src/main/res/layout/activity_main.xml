<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".MainActivity">


    <Button
        android:drawableEnd="@drawable/ic_strelka"
        android:id="@+id/buttonGameNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:backgroundTint="@color/white"
        android:text="Next"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ic_sowa"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="100dp"
        android:src="@drawable/ic_sowa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SOWA"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/ic_sowa"
        app:layout_constraintStart_toStartOf="@id/ic_sowa"
        app:layout_constraintTop_toBottomOf="@id/ic_sowa" />


    <EditText
        android:layout_marginHorizontal="20dp"
        android:paddingStart="10dp"
        android:id="@+id/et_first"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/ic_corners"
        android:hint="UserName"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_second"
        android:paddingStart="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/ic_corners"
        android:hint="Email"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@id/et_first"
        app:layout_constraintStart_toStartOf="@id/et_first"
        app:layout_constraintTop_toBottomOf="@id/et_first" />

    <EditText
        android:layout_marginHorizontal="20dp"
        android:paddingStart="10dp"
        android:id="@+id/et_third"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/ic_corners"
        android:hint="Password"
        android:layout_marginVertical="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_second" />


</androidx.constraintlayout.widget.ConstraintLayout>